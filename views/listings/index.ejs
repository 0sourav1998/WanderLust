<% layout("/layouts/boilerplate.ejs") %>
<body>
  <div class="main-container">
  <div class="filters mt-3">
    <div class="filter"><i class="fa-solid fa-city"></i></div>
    <p>Top Cities</p>
  </div>
  <div class="filters mt-3">
    <div class="filter"><i class="fa-solid fa-mountain"></i></div>
    <p>Amazing Mountains</p>
  </div>
  <div class="filters mt-3">
    <div class="filter"><i class="fa-solid fa-eye"></i></div>
    <p>Amazing Views</p>
  </div>
  <div class="filters mt-3">
    <div class="filter"><i class="fa-brands fa-gratipay"></i></div>
    <p>OMG</p>
  </div>
  <div class="filters mt-3">
    <div class="filter"><i class="fa-solid fa-warehouse"></i></div>
    <p>Treehouse</p>
  </div>
  <div class="filters mt-3">
    <div class="filter"><i class="fa-solid fa-tractor"></i></div>
    <p>Farms</p>
  </div>
  <div class="form-check form-switch">
    <input class="form-check-input-reverse" type="checkbox" role="switch" id="flexSwitchCheckDefault">
    <label class="form-check-label" for="flexSwitchCheckDefault"><b>With G.S.T</b></label>
  </div>
</div>
  
  <ul>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mb-3 mt-3">
      <% for(let listing of allListings){ %>
        <a class="link" href="/listings/<%= listing._id %>">
        <div class="card" style="width: 20rem ;">
          <img style="height: 20rem"
            class="card-img-top"
            src="<%= listing.image.url %>"
            alt="Card image cap"
          />
          <div class="card-img-overlay"></div>
          <div class="card-body">
           <b> <%= listing.title %> </b> <br/> <br/>
            <i>&#8377; <%= listing.price %>/night </i>
            <i class="tax-info"> + 18% GST</i>
          </div>
        </div>
      </a>
        <% } %>
    </div>
  </ul>
  <script>
    let checkedBox = document.getElementById("flexSwitchCheckDefault");
    checkedBox.addEventListener("click",()=>{
      let taxInfo = document.getElementsByClassName('tax-info') ;
      for(let tax of taxInfo){
        if (tax.style.display === 'none' || tax.style.display === '') {
          tax.style.display = 'inline';
        } else {
          tax.style.display = 'none';
        }
      }
    }) ;
    </script>
</body>
