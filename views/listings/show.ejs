<% layout("/layouts/boilerplate.ejs") %>
<body>
  <h2 class="mb-3 details"><%= listing.title %></h2>
  <div class="row">
    <div class="col-8 offset-4">
      <div class="card" style="width: 26rem">
        <img
          style="height: 18rem"
          class="card-img-top"
          src="<%= listing.image %>"
          alt="Card image cap"
        />
      </div>
    </div>
    <div class="card-body mb-2">
      <ul>
        <li><%= listing.description %></li>
        <li>&#8377; <%= listing.price %></li>
        <li><%= listing.location %></li>
        <li><%= listing.country %></li>
      </ul>
    </div>
  </div>

  <div class="mb-2">
    <form method="GET" action="/listings/<%= listing._id %>/edit">
      <button class="btn btn-dark mt-2">Edit</button>
    </form>
  </div>
  <div class="mb-2">
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-dark mt-2">Delete</button>
    </form>
  </div>
<hr>
  <div class="review col-10">
    <h3>Leave A Review</h3>
    <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
      <div class="mb-2">
        <label for="rating" class="form-label">Ratings</label>
        <input type="range" class="form-range" min="1" max="5" id="rating" name="ratings">
      </div>
      <div class="mb-2">
        <label for="comments" "form-label">Comments</label>
        <textarea name="comments" id="comments"class="form-control" required></textarea>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
  </div>
  <hr>
  <div class="mt-3">
    <h2>All Reviews</h2>
    <div class="row">
    <% for (let review of listing.reviews) { %>
        <div class="card col-md-4">
        <div class="card-body review-border">
          <p class="card-text"><%= review.comments %></p>
          <h5 class="card-title">Rating: <%= review.ratings %> &#9734;</h5>
          <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
            <button class="review-btn m-2">Delete This Review</button>
          </form>
        </div>
      </div>
    <% } %>
  </div>
  </div>
</body>
